{
  "compilerOptions": {
    // Recommended options for Astro projects
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler", // Or "node" depending on your setup, "bundler" is common with Vite/Astro

    // Existing options
    "baseUrl": "./", // Set base URL for path aliases
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ]
}
