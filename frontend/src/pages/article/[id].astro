---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleDetail from '../../components/ArticleDetail'; // Import as a React component

// Removed getStaticPaths to make this a dynamic route
export const prerender = false; // Mark this route for on-demand server rendering

const { id } = Astro.params;
const pageTitle = `Article ${id}`; // Basic title for now
---

<BaseLayout title={pageTitle}>
  {/* The ArticleDetail component will fetch data client-side */}
  <ArticleDetail id={id} client:load />
</BaseLayout>
