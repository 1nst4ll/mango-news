# Example file for backend environment variables. Copy to .env and fill in your credentials.
# Backend Environment Variables

# Server Configuration
PORT=3000
PUBLIC_API_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mangonews
DB_USER=mangoadmin
DB_PASSWORD=your_database_password

# API Keys
GROQ_API_KEY=your_groq_api_key

# fal.ai Configuration for AI Image Generation (FLUX.2 Klein)
FAL_KEY=your_fal_ai_key
# FAL_IMAGE_MODEL=fal-ai/flux-2/klein/4b/base/lora  # Default model with LoRA support
# FAL_IMAGE_WIDTH=1280                              # Image width (16:9 aspect ratio)
# FAL_IMAGE_HEIGHT=720                              # Image height
# FAL_INFERENCE_STEPS=28                            # Higher = better quality, slower
# FAL_GUIDANCE_SCALE=5                              # Classifier-free guidance scale
# FAL_OUTPUT_FORMAT=png                             # Options: jpeg, png, webp
# FAL_MAX_RETRIES=3

# AI Model Configuration (optional - uses llama-3.3-70b-versatile by default)
# See https://console.groq.com/docs/models for available models
# AI_SUMMARY_MODEL=llama-3.3-70b-versatile
# AI_TRANSLATION_MODEL=llama-3.3-70b-versatile
# AI_TOPICS_MODEL=llama-3.3-70b-versatile
# AI_PROMPT_MODEL=llama-3.3-70b-versatile

# AWS S3 Configuration for AI Images
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region # e.g., us-east-1
S3_BUCKET_NAME=your_s3_bucket_name # The name of your S3 bucket

# Firecrawl API Key
# FIRECRAWL_API_KEY=your_firecrawl_api_key

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# Unreal Speech API Key
UNREAL_SPEECH_API_KEY=your_unreal_speech_api_key
