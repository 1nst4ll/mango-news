# Example file for backend environment variables. Copy to .env and fill in your credentials.
# Backend Environment Variables

# Database Configuration
DB_HOST=localhost
DB_NAME=mangonews
DB_USER=mangoadmin
DB_PASSWORD=your_database_password

# API Keys
GROQ_API_KEY=your_groq_api_key
IDEOGRAM_API_KEY=your_ideogram_api_key

# AWS S3 Configuration for AI Images
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region # e.g., us-east-1
S3_BUCKET_NAME=your_s3_bucket_name # The name of your S3 bucket

# Firecrawl API Key
# FIRECRAWL_API_KEY=your_firecrawl_api_key

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# Unreal Speech API Key
UNREAL_SPEECH_API_KEY=your_unreal_speech_api_key
